<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="472dp"
        android:layout_height="365dp"
        android:layout_marginEnd="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/enter_video_button"
        android:layout_width="109dp"
        android:layout_height="0dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="59dp"
        android:text="from\nvideo"
        app:layout_constraintBottom_toTopOf="@+id/enter_image_button"
        app:layout_constraintEnd_toEndOf="@+id/enter_image_button"
        app:layout_constraintStart_toStartOf="@+id/enter_image_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/enter_image_button"
        android:layout_width="109dp"
        android:layout_height="0dp"
        android:layout_marginBottom="60dp"
        android:text="from image"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="@+id/button3"
        app:layout_constraintStart_toStartOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/enter_video_button" />

    <Button
        android:id="@+id/button3"
        android:layout_width="109dp"
        android:layout_height="0dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="40dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/enter_image_button" />
</androidx.constraintlayout.widget.ConstraintLayout>